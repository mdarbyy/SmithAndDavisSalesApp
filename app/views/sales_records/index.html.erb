<div class="d-flex flex-column m-1">
  <div class="row">
    <div class="col-3 d-flex justify-content-start">
      <%= button_to 'Add Sales Record', new_sales_record_path, method: :get, data: { turbo: false }, class: 'btn btn-main btn-left' %>
    </div>
    <div class="col-5 d-flex justify-content-center">
      <h1>Sales Records</h1>
    </div>
    <div class="col-4 d-flex justify-content-end">
      <form role="search" class="d-flex search-form">
        <input class="form-control" type="text" placeholder="Search" aria-label="Search" id="content-search">
      </form>
    </div>
  </div>

  <div class="card m-1 p-2" id="content-main">
    <div class="scrollable-table">
      <% if @sales_records.present? and @sales_records.count > 0 %>
        <table class="table content" id="content-table">
          <thead>
            <tr>
              <th class="stick" scope="col" style="min-width: 140px;"><a>Sales Person</a></th>
              <th class="stick" scope="col"><a>Sell Date</a></th>
              <th class="stick" scope="col"><a>Amount Sold</a></th>
              <th class="stick" scope="col" style="min-width: 120px;"><a>Sales Floor Hours</a></th>
              <th class="stick" scope="col"><a>Project Hours</a></th>
              <th class="stick" scope="col"><a></a></th>
            </tr>
          </thead>
          <tbody id="content-table-body">
            <% @sales_records.each do |sales_record| %>
              <%= render 'sales_record', sales_record: sales_record %>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <table class="table content">
          <thead>
            <tr>
              <th class="stick" scope="col"><a>Sales Person</a></th>
              <th class="stick" scope="col"><a>Sell Date</a></th>
              <th class="stick" scope="col"><a>Amount Sold</a></th>
              <th class="stick" scope="col" style="min-width: 120px;"><a>Sales Floor Hours</a></th>
              <th class="stick" scope="col"><a>Project Hours</a></th>
              <th class="stick" scope="col"><a></a></th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
        <h1 class="text-center">NO DATA</h1>
      <% end %>
      <div id="loading-spinner" style="display: none; text-align: center;">
        <div class="spinner-border" style="color: #193856;" role="status">
          <span class="sr-only"></span>
        </div>
      </div>
    </div>
    <div style="text-align: center;" id="recordCount">
      <b>Displaying <span id="currentCount">0</span> of <span id="totalCount"><%= number_with_delimiter(@total_records) %></span> Sales Records</b>
    </div>
  </div>
</div>

<script>
  var isLoading = false;
  $(".scrollable-table").scroll(function() {
    var totalRecords  = Number($('#totalCount').text().replace(/,/g, ''));
    var currentCount  = Number($('#currentCount').text().replace(/,/g, ''));

    if (currentCount < totalRecords) {
      if ($(".scrollable-table").scrollTop() >= $("#content-table").height() - $(".scrollable-table").height() && !isLoading) {
        loadMoreRecords();
      }
    }
  });

  function loadMoreRecords() {
    if (isLoading) return;
    console.log("Loading Sales Records");
    const currentVisibleCount = $('#content-table tbody tr').length;

    $.ajax({
      url: "sales_records",
      data: { offset: currentVisibleCount },
      type: 'GET',
      dataType: 'script',
      cache: true,
      beforeSend: function(){
        isLoading = true;
        $("#loading-spinner").show();
      },
      success: function(data) {
        console.log("Loaded Sales Records");
        var rowCount = $('#content-table tbody tr').length;
        $('#currentCount').text(rowCount);
      },
      error: function(jqXHR, textStatus, errorThrown) {
        console.error("AJAX Error:", textStatus, errorThrown);
      },
      complete: function(){
        isLoading = false;
        $("#loading-spinner").hide();
      }
    });
  }
</script>