<style>
  .image-section {
    background-image: url('<%= asset_path("sign_in.png") %>');
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    flex: 3;
  }
</style>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'mt-4' }) do |f| %>
  <div class="form-group mb-3">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>
  <div class="form-group mb-3">
    <%= f.label :password, class: 'form-label' %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  <div class="d-grid gap-2">
    <%= f.submit "Sign in", data: { turbo: false }, class: "btn btn-main" %>
  </div>

  <% unless User.exists? %>
    <div class="text-center mt-3">
      Dont have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "link-primary" %> 
    </div>
  <% end %>
<% end %>